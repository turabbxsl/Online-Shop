
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Assign User Role</h2>
    </div>
</div>
<br />

<div>
    <table class="table table-striped border">

        <tr class="table-info">
            <th> User Name </th>
            <th> Role Name </th>
        </tr>

        @foreach (var item in ViewBag.UserRoles)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.RoleName</td>
            </tr>
        }

    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }

            var update = '@TempData["update"]'
            if (update != '') {
                alertify.warning(update);
            }

            var deletee = '@TempData["delete"]'
            if (deletee != '') {
                alertify.error(deletee);
            }

        });
    </script>
}

